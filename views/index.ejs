<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Anonymous Message Board</title>
    <link href="/style.css?v=<%= new Date().getTime() %>" rel="stylesheet">
    <link rel="icon" href="/favicon.svg" type="image/svg+xml">
    <script src="https://cdn.jsdelivr.net/npm/showdown/dist/showdown.min.js"></script>
</head>
<body class="bg-black text-gray-200 flex items-center justify-center min-h-screen">

    <div class="mx-auto p-4 md:p-8 w-full lg:w-2/3">

        <!-- Header -->
        <header class="text-center mb-8 flex justify-between items-center">
            <div class="text-left">
                <h1 class="text-4xl font-bold text-gray-100">Anonymous Message Board</h1>
            </div>

            <!-- User Area -->
            <div id="user-area" class="flex gap-3 items-center">
                <!-- Guest view (not logged in) -->
                <div id="guest-view" class="<%= user ? 'hidden' : '' %>">
                    <button id="login-btn" class="border border-gray-700 hover:border-gray-100 text-gray-400 hover:text-gray-100 font-bold py-2 px-4 rounded-lg transition-colors">
                        Login
                    </button>
                </div>

                <!-- User view (logged in) -->
                <div id="user-view" class="<%= user ? '' : 'hidden' %> flex items-center gap-3">
                    <span class="text-gray-400">Welcome, <span id="username-display" class="text-gray-100"><%= user ? user.username : '' %></span></span>
                    <button id="logout-btn" class="border border-gray-700 hover:border-gray-100 text-gray-400 hover:text-gray-100 font-bold py-2 px-4 rounded-lg transition-colors">
                        Logout
                    </button>
                </div>
            </div>
        </header>

        <!-- Message Form -->
        <div class="mb-8">
            <form id="message-form" class="flex flex-col gap-4">
                <textarea
                    id="message-input"
                    name="content"
                    class="w-full p-4 bg-black border border-gray-800 rounded-lg focus:ring-2 focus:ring-gray-100 focus:outline-none transition-shadow text-gray-400 placeholder:text-gray-600"
                    rows="3"
                    placeholder="What's on your mind?"></textarea>

                <!-- File Upload Section -->
                <div class="flex flex-col gap-2">
                    <div class="flex items-center gap-2">
                        <input type="file" id="file-upload" accept="*" class="hidden">
                        <span id="file-status" class="text-sm text-gray-500 hidden">No file selected</span>
                    </div>

                    <!-- File Preview -->
                    <div id="file-preview-container" class="hidden">
                        <div class="relative inline-block">
                            <div id="file-preview-content" class="max-h-48 rounded-lg border border-gray-800 p-3 bg-gray-900">
                                <div id="file-preview-icon" class="text-center mb-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                    </svg>
                                </div>
                                <div id="file-preview-name" class="text-center text-sm text-gray-300 break-all"></div>
                                <div id="file-preview-type" class="text-center text-xs text-gray-500 mt-1"></div>
                                <div id="file-preview-size" class="text-center text-xs text-gray-500 mt-1"></div>
                            </div>
                            <button type="button" id="remove-file-button" class="absolute top-1 right-1 bg-black/80 backdrop-blur-sm text-xs px-2 py-1 rounded border border-gray-700 text-gray-200 hover:border-gray-100 hover:text-gray-100">
                                Remove
                            </button>
                        </div>
                    </div>
                </div>

                <!-- 按钮容器 -->
                <div class="flex flex-col gap-2">
                    <div class="flex gap-2 items-center">
                        <!-- KEY 按钮（左侧） -->
                        <button type="button" id="key-button"
                                class="border border-gray-700 hover:border-gray-100 text-gray-400 hover:text-gray-100 font-bold py-2 px-4 rounded-lg transition-colors">
                            KEY
                        </button>

                        <!-- KEY 输入框（默认隐藏） -->
                        <input type="text" id="private-key-input" placeholder="Enter private key"
                               class="hidden flex-1 p-2 bg-black border border-gray-800 rounded-lg focus:ring-2 focus:ring-gray-100 focus:outline-none text-gray-400 placeholder:text-gray-600">

                        <!-- Send 按钮（默认隐藏） -->
                        <button type="button" id="send-key-button"
                                class="hidden border border-gray-700 hover:border-gray-100 text-gray-400 hover:text-gray-100 font-bold py-2 px-4 rounded-lg transition-colors">
                            Send
                        </button>

                        <!-- 右侧按钮组 -->
                        <div class="flex items-center ml-auto">
                            <!-- File Upload Button (paperclip icon) -->
                            <button type="button" id="upload-file-button" class="bg-transparent border-none text-gray-400 hover:text-gray-100 font-bold py-2 px-3 rounded-lg transition-colors mr-[5px]">
                                +
                            </button>

                            <!-- Post Message 按钮（右侧，保持原样式和位置） -->
                            <button type="submit" id="post-message-button" class="border border-gray-700 hover:border-gray-100 text-gray-400 hover:text-gray-100 font-bold py-2 px-4 rounded-lg transition-colors">
                                Post Message
                            </button>
                        </div>
                    </div>

                    <!-- 错误提示区域（在KEY输入框下方） -->
                    <div id="error-message" class="hidden text-red-400 text-center font-bold p-3 bg-black rounded-lg border border-red-800" role="alert"></div>
                </div>
            </form>
        </div>

        <!-- Message List -->
        <main id="message-list" class="space-y-4">
            <!-- Messages will be dynamically injected here by JavaScript -->
        </main>

        <!-- Pagination Controls (will be injected by JavaScript) -->
        <div id="pagination-container"></div>

<% /* %>
