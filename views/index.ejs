        <!-- 消息类型选择弹窗 -->
        <dialog id="message-type-modal" class="bg-black text-gray-200 p-6 rounded-lg shadow-lg border border-gray-800 backdrop:bg-black backdrop:bg-opacity-75">
            <h2 class="text-xl font-bold mb-4 text-gray-100">Choose Message Type</h2>

            <div id="type-selection" class="flex flex-col gap-3">
                <button id="public-option" class="border border-gray-700 hover:border-gray-100 text-gray-400 hover:text-gray-100 font-bold py-2 px-4 rounded-lg transition-colors">
                    Public Message
                </button>
                <button id="private-option" class="border border-gray-700 hover:border-gray-100 text-gray-400 hover:text-gray-100 font-bold py-2 px-4 rounded-lg transition-colors">
                    Private Message
                </button>
            </div>

            <div id="private-key-entry" class="hidden mt-4">
                <label for="modal-private-key" class="block mb-2 text-sm font-bold text-gray-400">Enter a KEY for your private message:</label>
                <input type="text" id="modal-private-key" placeholder="Any text or symbols..."
                       class="w-full p-3 bg-black border border-gray-800 rounded-lg focus:ring-2 focus:ring-gray-100 focus:outline-none text-gray-400 placeholder:text-gray-600 mb-4">
                <div class="flex justify-end gap-2">
                    <button id="cancel-private" class="border border-gray-700 hover:border-gray-100 text-gray-400 hover:text-gray-100 font-bold py-2 px-4 rounded-lg transition-colors">
                        Cancel
                    </button>
                    <button id="confirm-private" class="border border-gray-700 hover:border-gray-100 text-gray-400 hover:text-gray-100 font-bold py-2 px-4 rounded-lg transition-colors">
                        Confirm
                    </button>
                </div>
            </div>
        </dialog>

        <!-- Login Modal -->
        <dialog id="login-modal" class="bg-black text-gray-200 p-6 rounded-lg shadow-lg border border-gray-800 backdrop:bg-black backdrop:bg-opacity-75">
            <h2 class="text-xl font-bold mb-4 text-gray-100">Login</h2>
            <form id="login-form" class="space-y-4">
                <input type="text" id="login-username" placeholder="Username"
                       class="w-full p-3 bg-black border border-gray-800 rounded-lg focus:ring-2 focus:ring-gray-100 focus:outline-none text-gray-400 placeholder:text-gray-600">
                <input type="password" id="login-password" placeholder="Password"
                       class="w-full p-3 bg-black border border-gray-800 rounded-lg focus:ring-2 focus:ring-gray-100 focus:outline-none text-gray-400 placeholder:text-gray-600">
                <div id="login-error" class="text-red-400 text-sm hidden"></div>
                <div class="flex justify-between items-center">
                    <button type="button" id="register-from-login" class="border border-gray-700 hover:border-gray-100 text-gray-400 hover:text-gray-100 font-bold py-2 px-4 rounded-lg transition-colors">
                        Register
                    </button>
                    <div class="flex gap-2">
                        <button type="button" id="cancel-login" class="border border-gray-700 hover:border-gray-100 text-gray-400 hover:text-gray-100 font-bold py-2 px-4 rounded-lg transition-colors">
                            Cancel
                        </button>
                        <button type="submit" class="border border-gray-700 hover:border-gray-100 text-gray-400 hover:text-gray-100 font-bold py-2 px-4 rounded-lg transition-colors">
                            Login
                        </button>
                    </div>
                </div>
            </form>
        </dialog>

        <!-- Register Modal -->
        <dialog id="register-modal" class="bg-black text-gray-200 p-6 rounded-lg shadow-lg border border-gray-800 backdrop:bg-black backdrop:bg-opacity-75">
            <h2 class="text-xl font-bold mb-4 text-gray-100">Register</h2>
            <form id="register-form" class="space-y-4">
                <input type="text" id="register-username" placeholder="Username (3-20 characters)"
                       class="w-full p-3 bg-black border border-gray-800 rounded-lg focus:ring-2 focus:ring-gray-100 focus:outline-none text-gray-400 placeholder:text-gray-600">
                <input type="password" id="register-password" placeholder="Password (at least 6 characters)"
                       class="w-full p-3 bg-black border border-gray-800 rounded-lg focus:ring-2 focus:ring-gray-100 focus:outline-none text-gray-400 placeholder:text-gray-600">
                <input type="password" id="register-confirm-password" placeholder="Confirm Password"
                       class="w-full p-3 bg-black border border-gray-800 rounded-lg focus:ring-2 focus:ring-gray-100 focus:outline-none text-gray-400 placeholder:text-gray-600">
                <div id="register-error" class="text-red-400 text-sm hidden"></div>
                <div class="flex justify-end gap-2">
                    <button type="button" id="cancel-register" class="border border-gray-700 hover:border-gray-100 text-gray-400 hover:text-gray-100 font-bold py-2 px-4 rounded-lg transition-colors">
                        Cancel
                    </button>
                    <button type="submit" class="border border-gray-700 hover:border-gray-100 text-gray-400 hover:text-gray-100 font-bold py-2 px-4 rounded-lg transition-colors">
                        Register
                    </button>
                </div>
            </form>
        </dialog>

        <!-- Footer -->
        <footer class="text-center mt-12 text-gray-600">
            <p>&copy; 2025 Goldie Rill. All rights reserved.</p>
            <div class="flex justify-center mt-4">
                <a href="https://github.com/carterwayneskhizeine/AnonymousMessageBoard" target="_blank" rel="noopener noreferrer" class="text-gray-500 hover:text-gray-100" aria-label="GitHub Repository">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="w-6 h-6 mb-3.75" viewBox="0 0 16 16">
                        <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27s1.36.09 2 .27c1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0 0 16 8c0-4.42-3.58-8-8-8"/>
                    </svg>
                </a>
            </div>
        </footer>

    </div>

    <script src="/js/youtube-extension.js?v=<%= new Date().getTime() %>"></script>
    <script src="/js/file-upload.js?v=<%= new Date().getTime() %>"></script>
    <script src="/js/auth-handlers.js?v=<%= new Date().getTime() %>"></script>
    <script src="/js/comment-styles.js?v=<%= new Date().getTime() %>"></script>
